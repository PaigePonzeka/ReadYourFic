= form_for @ship do |f|
  -if @ship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ship.errors.count, "error")} prohibited this ship from being saved:"
      %ul
        - @ship.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
